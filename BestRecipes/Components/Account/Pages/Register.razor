@page "/Account/Register"

@using System.ComponentModel.DataAnnotations
@using System.Text
@using System.Text.Encodings.Web
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities
@using BestRecipes.Data

@inject UserManager<BestRecipesUser> UserManager
@inject IUserStore<BestRecipesUser> UserStore
@inject SignInManager<BestRecipesUser> SignInManager
@inject IEmailSender<BestRecipesUser> EmailSender
@inject ILogger<Register> Logger
@inject NavigationManager NavigationManager
@inject IdentityRedirectManager RedirectManager
@inject RoleManager<IdentityRole> RoleManager

<PageTitle>Join BestRecipes</PageTitle>

<div class="fd-auth-container">
    <div class="fd-auth-card">
        <h2 class="fd-auth-title">SIGN UP</h2>

        <StatusMessage Message="@Message" />

        <EditForm Model="Input" asp-route-returnUrl="@ReturnUrl" method="post" OnValidSubmit="RegisterUser" FormName="register">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger mb-3" role="alert" style="font-size: 0.8rem; font-weight: bold; list-style: none; padding: 0;" />

            <div class="row g-2">
                <div class="col-md-6 fd-form-group">
                    <label for="firstName">First Name</label>
                    <InputText @bind-Value="Input.FirstName" id="firstName" class="form-control fd-input" autocomplete="firstname" aria-required="true" placeholder="Bill" />
                    <ValidationMessage For="() => Input.FirstName" class="text-danger small fw-bold" />
                </div>
                <div class="col-md-6 fd-form-group">
                    <label for="lastName">Last Name</label>
                    <InputText @bind-Value="Input.LastName" id="lastName" class="form-control fd-input" autocomplete="lastname" aria-required="true" placeholder="Gates" />
                    <ValidationMessage For="() => Input.LastName" class="text-danger small fw-bold" />
                </div>
            </div>

            <div class="fd-form-group">
                <label for="email">Email</label>
                <InputText @bind-Value="Input.Email" id="email" class="form-control fd-input" autocomplete="username" aria-required="true" placeholder="your@email.com" />
                <ValidationMessage For="() => Input.Email" class="text-danger small fw-bold" />
            </div>

            <div class="fd-form-group">
                <label for="password">Password</label>
                <InputText type="password" @bind-Value="Input.Password" id="password" class="form-control fd-input" autocomplete="new-password" aria-required="true" placeholder="Create Password" />
                <ValidationMessage For="() => Input.Password" class="text-danger small fw-bold" />
            </div>

            <div class="fd-form-group">
                <label for="confirm-password">Confirm Password</label>
                <InputText type="password" @bind-Value="Input.ConfirmPassword" id="confirm-password" class="form-control fd-input" autocomplete="new-password" aria-required="true" placeholder="Repeat Password" />
                <ValidationMessage For="() => Input.ConfirmPassword" class="text-danger small fw-bold" />
            </div>

            <button type="submit" class="btn fd-btn-signup">REGISTER</button>

            <div class="fd-divider">
                <span>OR REGISTER WITH</span>
            </div>

            <div class="fd-external-picker">
                <ExternalLoginPicker />
            </div>

            <div class="mt-4 fd-login-prompt">
                Already have an account?
                <a href="Account/Login" class="fd-link-blue">Log In</a>
            </div>
        </EditForm>
    </div>
</div>

