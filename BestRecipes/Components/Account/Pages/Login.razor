@page "/Account/Login"

@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Identity
@using BestRecipes.Data

@inject SignInManager<BestRecipesUser> SignInManager
@inject ILogger<Login> Logger
@inject NavigationManager NavigationManager
@inject IdentityRedirectManager RedirectManager

<PageTitle>Log In | BestRecipes</PageTitle>

<div class="fd-auth-container">
    <div class="fd-auth-card">
        <h2 class="fd-auth-title">LOG IN</h2>

        <StatusMessage Message="@errorMessage" />

        <EditForm Model="Input" method="post" OnValidSubmit="LoginUser" FormName="login">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger mb-3" role="alert" style="font-size: 0.8rem; font-weight: bold; list-style: none; padding: 0;" />

            <div class="fd-form-group">
                <label for="email">Email</label>
                <InputText @bind-Value="Input.Email" id="email" class="form-control fd-input" autocomplete="username" aria-required="true" placeholder="your@email.com" />
                <ValidationMessage For="() => Input.Email" class="text-danger small fw-bold" />
            </div>

            <div class="fd-form-group">
                <label for="password">Password</label>
                <div class="position-relative">
                    <InputText type="password" @bind-Value="Input.Password" id="password" class="form-control fd-input" autocomplete="current-password" aria-required="true" placeholder="Password" />
                    <span class="fd-password-toggle">SHOW</span>
                </div>
                <ValidationMessage For="() => Input.Password" class="text-danger small fw-bold" />
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <InputCheckbox @bind-Value="Input.RememberMe" id="remember" class="form-check-input fd-checkbox" />
                    <label class="form-check-label small fw-bold text-uppercase" for="remember" style="letter-spacing: 0.5px;">Remember me</label>
                </div>
                <a href="Account/ForgotPassword" class="fd-link-blue">Forgot Password?</a>
            </div>

            <button type="submit" class="btn fd-btn-login">LOG IN</button>

            <div class="fd-divider">
                <span>OR CONTINUE WITH</span>
            </div>

            @* Integrating your ExternalLoginPicker but with Food.com styling applied via CSS *@
            <div class="fd-external-picker">
                <ExternalLoginPicker />
            </div>

            <div class="mt-4 fd-signup-prompt">
                Don't have an account yet?
                <a href="@(NavigationManager.GetUriWithQueryParameters("Account/Register", new Dictionary<string, object?> { ["ReturnUrl"] = ReturnUrl }))" class="fd-link-blue">Sign Up</a>
            </div>

            <div class="mt-2">
                <a href="Account/ResendEmailConfirmation" class="text-muted small text-decoration-none fw-bold">Resend email confirmation</a>
            </div>
        </EditForm>
    </div>
</div>

<style>
    .fd-auth-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f9f9f9;
        padding: 20px;
    }

    .fd-auth-card {
        max-width: 450px;
        width: 100%;
        background: white;
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        text-align: center;
    }

    .fd-auth-title {
        font-family: 'Arial Black', sans-serif;
        font-size: 2rem;
        font-weight: 900;
        margin-bottom: 30px;
        letter-spacing: -1px;
    }

    .fd-form-group {
        text-align: left;
        margin-bottom: 20px;
    }

        .fd-form-group label {
            font-size: 0.7rem;
            font-weight: 900;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 5px;
            display: block;
        }

    .fd-input {
        background-color: #F2F2F2 !important;
        border: none !important;
        border-radius: 4px !important;
        height: 50px;
        font-weight: 600;
        padding: 10px 15px;
    }

    .fd-password-toggle {
        position: absolute;
        right: 15px;
        top: 15px;
        font-size: 0.65rem;
        font-weight: 900;
        cursor: pointer;
        color: #222;
    }

    .fd-btn-login {
        background-color: #F5EB3B !important;
        color: #222 !important;
        border: none !important;
        width: 100%;
        height: 50px;
        font-weight: 900;
        letter-spacing: 1px;
        border-radius: 4px !important;
        margin-bottom: 20px;
    }

