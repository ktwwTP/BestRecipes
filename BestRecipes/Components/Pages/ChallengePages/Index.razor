@page "/challenges"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using Microsoft.AspNetCore.Authorization
@using BestRecipes.Domain
@using BestRecipes.Data
@implements IAsyncDisposable
@inject IDbContextFactory<BestRecipes.Data.BestRecipesContext> DbFactory
@rendermode InteractiveServer

<PageTitle>Cooking Challenges</PageTitle>

@* --- Food.com Style Header --- *@
<div class="challenge-header">
    <div class="container text-center">
        <h1 class="display-4 fw-black">COOKING CHALLENGES</h1>
        <p class="lead text-uppercase tracking-widest">Show off your skills and win community badges</p>
    </div>
</div>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="search-box">
            <i class="bi bi-search"></i>
            <input type="search" @bind="searchText" @bind:event="oninput"
                   placeholder="Find a challenge..." class="form-control shadow-sm" />
        </div>
        <a href="challenges/create" class="btn btn-challenge-action">
            <i class="bi bi-plus-lg"></i> START A CHALLENGE
        </a>
    </div>

    <div class="card shadow-sm border-0 fd-grid-container">
        <QuickGrid Class="table challenge-table" Items="FilteredChallenges">
            <TemplateColumn Title="Status">
                @{
                    var status = GetStatus(context.EndDate);
                    <span class="badge @(status == "Active" ? "bg-success" : "bg-secondary")">
                        @status.ToUpper()
                    </span>
                }
            </TemplateColumn>

            <PropertyColumn Property="challenge => challenge.Name" Sortable="true" Title="Challenge Name" Class="fd-column-name" />

            <TemplateColumn Title="Timeline">
                <div class="small">
                    <div><i class="bi bi-calendar-check text-muted"></i> @context.StartDate.ToShortDateString()</div>
                    <div><i class="bi bi-calendar-x text-muted"></i> @context.EndDate.ToShortDateString()</div>
                </div>
            </TemplateColumn>

            <TemplateColumn Title="Details">
                <div class="text-truncate" style="max-width: 250px;">
                    @context.Details
                </div>
            </TemplateColumn>

            <PropertyColumn Property="challenge => challenge.CreatedBy" Title="Organizer" />

            <TemplateColumn Context="challenge" Title="Actions">
                <div class="d-flex align-items-center" style="position: relative;">
                    <a class="btn btn-sm btn-outline-dark me-1" href="@($"challenges/details?id={challenge.Id}")">JOIN</a>

                    <div class="fd-native-dropdown">
                        <button class="btn btn-sm btn-light border" type="button" @onclick="() => ToggleDropdown(challenge.Id)">
                            <i class="bi bi-three-dots-vertical"></i>
                        </button>

                        @if (openDropdownId == challenge.Id)
                        {
                            <ul class="fd-dropdown-menu shadow animate-fade-in">
                                <li>
                                    <a class="dropdown-item" href="@($"challenges/edit?id={challenge.Id}")">
                                        <i class="bi bi-pencil me-2"></i>Edit Settings
                                    </a>
                                </li>

                                <AuthorizeView Roles="Administrator">
                                    <Authorized>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item text-danger" href="@($"challenges/delete?id={challenge.Id}")">
                                                <i class="bi bi-trash me-2"></i>Delete Challenge
                                            </a>
                                        </li>
                                    </Authorized>
                                </AuthorizeView>
                            </ul>
                            <div class="fd-dropdown-overlay" @onclick="() => openDropdownId = 0"></div>
                        }
                    </div>
                </div>
            </TemplateColumn>
        </QuickGrid>
    </div>
</div>

<style>
    /* --- Table Header Colors (FORCED WHITE) --- */

    /* 1. Force the container background */
    .challenge-table thead,
    .challenge-table thead tr {
        background-color: #222 !important;
    }

        /* 2. Target the cells and any buttons QuickGrid creates inside them */
        .challenge-table thead th,
        .challenge-table thead th button {
            color: white !important;
            background-color: #222 !important;
            font-weight: 900 !important;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 1px;
            border: none !important;
        }

            /* 3. Deep target for the internal QuickGrid text span */
            .challenge-table thead th ::deep .col-title-text {
                color: white !important;
            }

            /* 4. Deep target for the sort arrows */
            .challenge-table thead th ::deep .sort-indicator {
                filter: brightness(0) invert(1) !important;
            }

    /* Layout Fixes */
    .fd-grid-container {
        overflow: visible !important;
    }

    .challenge-table {
        overflow: visible !important;
    }

    /* Dropdown UI */
    .fd-native-dropdown {
        position: relative;
        display: inline-block;
    }

    .fd-dropdown-menu {
        position: absolute;
        top: 100%;
        right: 0;
        z-index: 2000;
        display: block;
        min-width: 180px;
        padding: 0.5rem 0;
        margin-top: 5px;
        background-color: #fff;
        border: 1px solid rgba(0,0,0,0.1);
        border-radius: 4px;
        list-style: none;
        text-align: left;
    }

    .fd-dropdown-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        z-index: 1500;
        background: transparent;
    }

    .dropdown-item {
        display: block;
        width: 100%;
        padding: 0.5rem 1rem;
        font-weight: 500;
        color: #212529;
        text-decoration: none;
    }

        .dropdown-item:hover {
            background-color: #f8f9fa;
            color: #000;
        }

    /* Food.com Branding Styles */
    .fw-black {
        font-weight: 900;
        letter-spacing: -1px;
        color: #222;
    }

    .tracking-widest {
        letter-spacing: 3px;
        font-size: 0.75rem;
        color: #757575;
    }

    .challenge-header {
        background-color: #f9f9f9;
        padding: 60px 0;
        border-bottom: 2px solid #eee;
        margin-bottom: 2rem;
    }

    .search-box {
        position: relative;
        width: 300px;
    }

        .search-box i {
            position: absolute;
            left: 12px;
            top: 10px;
            color: #aaa;
        }

        .search-box input {
            padding-left: 35px;
            border-radius: 20px;
        }

    .btn-challenge-action {
        background-color: #f5eb3b;
        color: #222;
        font-weight: 800;
        border: 2px solid #222;
        border-radius: 4px;
        transition: all 0.2s;
    }

        .btn-challenge-action:hover {
            background-color: #222;
            color: #f5eb3b;
        }

    .badge {
        padding: 8px 12px;
        font-weight: 700;
        border-radius: 4px;
    }

    .animate-fade-in {
        animation: fadeIn 0.15s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

@code {
    private BestRecipesContext context = default!;
    private string searchText = "";
    private int openDropdownId = 0;

    private void ToggleDropdown(int id)
    {
        if (openDropdownId == id)
            openDropdownId = 0;
        else
            openDropdownId = id;
    }

    private IQueryable<Challenge> FilteredChallenges => context.Challenge
        .Where(c => string.IsNullOrEmpty(searchText) || c.Name.Contains(searchText))
        .OrderByDescending(c => c.EndDate);

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    private string GetStatus(DateTime endDate) => endDate >= DateTime.Now ? "Active" : "Expired";

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}