@page "/favourites/delete"
@using Microsoft.EntityFrameworkCore
@using BestRecipes.Domain
@inject IDbContextFactory<BestRecipes.Data.BestRecipesContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Favourite</h2>
    <hr />
    @if (favourite is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">UserId</dt>
            <dd class="col-sm-10">@favourite.UserId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">RecipeId</dt>
            <dd class="col-sm-10">@favourite.RecipeId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CategoryId</dt>
            <dd class="col-sm-10">@favourite.CategoryId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Date</dt>
            <dd class="col-sm-10">@favourite.Date</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@favourite.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@favourite.DateUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@favourite.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@favourite.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="favourite" OnValidSubmit="DeleteFavourite" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(favourite is null)">Delete</button> |
            <a href="/favourites">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Favourite? favourite;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        favourite = await context.Favourite.FirstOrDefaultAsync(m => m.Id == Id);

        if (favourite is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteFavourite()
    {
        using var context = DbFactory.CreateDbContext();
        context.Favourite.Remove(favourite!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/favourites");
    }
}
