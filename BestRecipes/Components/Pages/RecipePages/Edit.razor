@page "/recipes/edit"
@using Microsoft.EntityFrameworkCore
@using BestRecipes.Domain
@using Microsoft.AspNetCore.Components.Authorization
@inject IDbContextFactory<BestRecipes.Data.BestRecipesContext> DbFactory
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Edit @(Recipe?.Title ?? "Recipe") - BestRecipes</PageTitle>

@if (Recipe is null)
{
    <div class="container mt-5 text-center">
        <div class="spinner-border text-warning" role="status"></div>
        <p class="mt-2">Fetching your recipe secrets...</p>
    </div>
}
else
{
    <div class="edit-hero">
        <div class="container">
            <nav class="fd-breadcrumb">RECIPES / EDIT / @Recipe.Title.ToUpper()</nav>
            <h1 class="fd-recipe-title">MODIFY RECIPE</h1>
        </div>
    </div>

    <div class="container mt-5 mb-5">
        <EditForm Model="Recipe" OnValidSubmit="UpdateRecipe" FormName="editRecipe">
            <DataAnnotationsValidator />

            <div class="row g-5">
                @* --- LEFT COLUMN: CORE CONTENT --- *@
                <div class="col-lg-8">
                    <div class="fd-form-section">
                        <h3 class="fd-section-header">ESSENTIALS</h3>

                        <div class="mb-4">
                            <label class="fd-label">RECIPE TITLE</label>
                            <InputText @bind-Value="Recipe.Title" class="form-control fd-input" placeholder="e.g. Classic Carbonara" />
                            <ValidationMessage For="() => Recipe.Title" class="text-danger" />
                        </div>

                        <div class="mb-4">
                            <label class="fd-label">SHORT DESCRIPTION</label>
                            <InputTextArea @bind-Value="Recipe.Description" class="form-control fd-input" rows="2" />
                            <ValidationMessage For="() => Recipe.Description" class="text-danger" />
                        </div>

                        @* --- INTEGRATED INGREDIENT SECTION (From Create Page) --- *@
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <label class="fd-label m-0">INGREDIENTS</label>
                                <button type="button" class="btn btn-link btn-sm p-0 text-dark fw-bold" @onclick="ShowIngredientModal">+ NEW INGREDIENT</button>
                            </div>

                            <div class="ingredient-container p-3 border-2 border-dark bg-light">
                                @if (Recipe.RecipeIngredients != null)
                                {
                                    @foreach (var ri in Recipe.RecipeIngredients)
                                    {
                                        <div class="row g-2 mb-2 align-items-center">
                                            @* Ingredient Dropdown *@
                                            <div class="col-5">
                                                <InputSelect @bind-Value="ri.IngredientId" class="form-control fd-input-sm">
                                                    <option value="0">Select...</option>
                                                    @if (allIngredients != null)
                                                    {
                                                        @foreach (var ing in allIngredients)
                                                        {
                                                            <option value="@ing.Id">@ing.Name</option>
                                                        }
                                                    }
                                                </InputSelect>
                                            </div>
                                            @* Quantity *@
                                            <div class="col-2">
                                                <InputNumber @bind-Value="ri.Quantity" class="form-control fd-input-sm" placeholder="Qty" />
                                            </div>
                                            @* Unit *@
                                            <div class="col-3">
                                                <InputSelect @bind-Value="ri.Unit" class="form-control fd-input-sm">
                                                    <option value="">Unit...</option>
                                                    @foreach (var unit in CommonUnits)
                                                    {
                                                        <option value="@unit">@unit</option>
                                                    }
                                                </InputSelect>
                                            </div>
                                            @* Remove Button *@
                                            <div class="col-2 text-end">
                                                <button type="button" class="btn btn-sm btn-outline-danger border-0" @onclick="() => RemoveIngredientRow(ri)">
                                                    <i class="bi bi-x-lg"></i>
                                                </button>
                                            </div>
                                        </div>
                                    }
                                }
                                <button type="button" class="btn btn-sm btn-outline-dark rounded-0 fw-bold mt-2 w-100" @onclick="AddIngredientRow">
                                    <i class="bi bi-plus-lg"></i> ADD ANOTHER ROW
                                </button>
                            </div>
                        </div>
                        @* ---------------------------------------------------- *@

                        <div class="mb-4">
                            <label class="fd-label">DIRECTIONS (One step per line)</label>
                            <InputTextArea @bind-Value="Recipe.Instructions" class="form-control fd-input" rows="10" />
                            <ValidationMessage For="() => Recipe.Instructions" class="text-danger" />
                        </div>
                    </div>
                </div>

                @* --- RIGHT COLUMN: METADATA & SIDEBAR --- *@
                <div class="col-lg-4">
                    <div class="fd-sidebar-box shadow-sm">
                        <h4 class="fd-label mb-3 text-center">PUBLISHING DETAILS</h4>

                        <div class="mb-3">
                            <label class="small fw-bold">IMAGE URL</label>
                            <InputText @bind-Value="Recipe.ImageUrl" class="form-control form-control-sm" placeholder="https://..." />
                        </div>

                        <div class="row g-2 mb-3">
                            <div class="col-6">
                                <label class="small fw-bold">PREP (MIN)</label>
                                <InputNumber @bind-Value="Recipe.PreparationTime" class="form-control" />
                            </div>
                            <div class="col-6">
                                <label class="small fw-bold">COOK (MIN)</label>
                                <InputNumber @bind-Value="Recipe.CookingDuration" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="small fw-bold">BASE SERVINGS</label>
                            <InputNumber @bind-Value="Recipe.ServingSize" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="small fw-bold">AUTHOR</label>
                            <InputText @bind-Value="Recipe.CreatedBy" class="form-control" />
                        </div>

                        <hr />

                        <div class="d-grid gap-2">
                            <button type="submit" class="fd-btn-save">PUBLISH CHANGES</button>
                            <a href="/recipes/details?id=@Recipe.Id" class="btn btn-outline-secondary btn-sm rounded-0 fw-bold">CANCEL & VIEW</a>
                        </div>

                        @* --- ADMIN ONLY DELETE BUTTON --- *@
                        <AuthorizeView Roles="Admin">
                            <Authorized Context="authContext">
                                <hr class="mt-4 mb-3" />
                                <div class="d-grid">
                                    <a href="/recipes/delete?id=@Recipe.Id" class="btn btn-danger btn-sm rounded-0 fw-bold">
                                        <i class="bi bi-trash-fill me-1"></i> DELETE RECIPE
                                    </a>
                                </div>
                            </Authorized>
                        </AuthorizeView>
                    </div>

                    @* PREVIEW IMAGE *@
                    @if (!string.IsNullOrEmpty(Recipe.ImageUrl))
                    {
                        <div class="mt-4">
                            <p class="fd-label small">IMAGE PREVIEW</p>
                            <img src="@Recipe.ImageUrl" class="img-fluid border border-2 border-dark" alt="Preview" />
                        </div>
                    }
                </div>
            </div>
        </EditForm>
    </div>
}

@* --- MODAL FOR NEW INGREDIENT (Same as Create Page) --- *@
@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.6); z-index: 1050;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 rounded-0 shadow-lg">
                <div class="modal-header bg-dark text-white rounded-0">
                    <h5 class="modal-title fw-bold">NEW INGREDIENT</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseIngredientModal"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="fd-label">NAME</label>
                        <input type="text" @bind="newIng.Name" class="form-control fd-input" placeholder="e.g. Fresh Ginger" />
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-secondary rounded-0" @onclick="CloseIngredientModal">CANCEL</button>
                    <button type="button" class="btn fd-btn-save rounded-0" @onclick="QuickSaveIngredient">SAVE</button>
                </div>
            </div>
        </div>
    </div>
}

