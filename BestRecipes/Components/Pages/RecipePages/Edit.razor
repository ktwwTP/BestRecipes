@page "/recipes/edit"
@using Microsoft.EntityFrameworkCore
@using BestRecipes.Domain
@inject IDbContextFactory<BestRecipes.Data.BestRecipesContext> DbFactory
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Edit @(Recipe?.Title ?? "Recipe") - BestRecipes</PageTitle>

@if (Recipe is null)
{
    <div class="container mt-5 text-center">
        <div class="spinner-border text-warning" role="status"></div>
        <p class="mt-2">Fetching your recipe secrets...</p>
    </div>
}
else
{
    @* --- EDIT HERO --- *@
    <div class="edit-hero">
        <div class="container">
            <nav class="fd-breadcrumb">RECIPES / EDIT / @Recipe.Title.ToUpper()</nav>
            <h1 class="fd-recipe-title">MODIFY RECIPE</h1>
        </div>
    </div>

    <div class="container mt-5 mb-5">
        <EditForm Model="Recipe" OnValidSubmit="UpdateRecipe" FormName="editRecipe">
            <DataAnnotationsValidator />

            <div class="row g-5">
                @* --- LEFT COLUMN: CORE CONTENT --- *@
                <div class="col-lg-8">
                    <div class="fd-form-section">
                        <h3 class="fd-section-header">ESSENTIALS</h3>

                        <div class="mb-4">
                            <label class="fd-label">RECIPE TITLE</label>
                            <InputText @bind-Value="Recipe.Title" class="form-control fd-input" placeholder="e.g. Classic Carbonara" />
                            <ValidationMessage For="() => Recipe.Title" class="text-danger" />
                        </div>

                        <div class="mb-4">
                            <label class="fd-label">SHORT DESCRIPTION</label>
                            <InputTextArea @bind-Value="Recipe.Description" class="form-control fd-input" rows="2" />
                            <ValidationMessage For="() => Recipe.Description" class="text-danger" />
                        </div>

                        <div class="mb-4">
                            <label class="fd-label">DIRECTIONS (One step per line)</label>
                            <InputTextArea @bind-Value="Recipe.Instructions" class="form-control fd-input" rows="10" />
                            <ValidationMessage For="() => Recipe.Instructions" class="text-danger" />
                        </div>
                    </div>
                </div>

                @* --- RIGHT COLUMN: METADATA & SIDEBAR --- *@
                <div class="col-lg-4">
                    <div class="fd-sidebar-box shadow-sm">
                        <h4 class="fd-label mb-3 text-center">PUBLISHING DETAILS</h4>

                        <div class="mb-3">
                            <label class="small fw-bold">IMAGE URL</label>
                            <InputText @bind-Value="Recipe.ImageUrl" class="form-control form-control-sm" placeholder="https://..." />
                        </div>

                        <div class="row g-2 mb-3">
                            <div class="col-6">
                                <label class="small fw-bold">PREP (MIN)</label>
                                <InputNumber @bind-Value="Recipe.PreparationTime" class="form-control" />
                            </div>
                            <div class="col-6">
                                <label class="small fw-bold">COOK (MIN)</label>
                                <InputNumber @bind-Value="Recipe.CookingDuration" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="small fw-bold">BASE SERVINGS</label>
                            <InputNumber @bind-Value="Recipe.ServingSize" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="small fw-bold">AUTHOR</label>
                            <InputText @bind-Value="Recipe.CreatedBy" class="form-control" />
                        </div>

                        <hr />

                        <div class="d-grid gap-2">
                            <button type="submit" class="fd-btn-save">PUBLISH CHANGES</button>
                            <a href="/recipes/details?id=@Recipe.Id" class="btn btn-outline-secondary btn-sm">CANCEL & VIEW</a>
                        </div>
                    </div>

                    @* PREVIEW IMAGE *@
                    @if (!string.IsNullOrEmpty(Recipe.ImageUrl))
                    {
                        <div class="mt-4">
                            <p class="fd-label small">IMAGE PREVIEW</p>
                            <img src="@Recipe.ImageUrl" class="img-fluid border border-2 border-dark" alt="Preview" />
                        </div>
                    }
                </div>
            </div>
        </EditForm>
    </div>
}

<style>
    .edit-hero {
        background: #f8f9fa;
        padding: 40px 0;
        border-bottom: 4px solid var(--fd-black);
    }

    .fd-form-section {
        background: white;
        padding: 20px;
    }

    .fd-label {
        font-family: 'Arial Black', sans-serif;
        font-size: 0.75rem;
        letter-spacing: 1.5px;
        color: var(--fd-grey);
        display: block;
        margin-bottom: 8px;
    }

    .fd-input {
        border: 2px solid #eee;
        border-radius: 0;
        padding: 12px;
        font-weight: 500;
    }

        .fd-input:focus {
            border-color: var(--fd-yellow);
            box-shadow: none;
        }

    .fd-btn-save {
        background: var(--fd-black);
        color: white;
        border: none;
        padding: 12px;
        font-weight: 900;
        letter-spacing: 1px;
        transition: 0.3s;
    }

        .fd-btn-save:hover {
            background: #444;
            transform: translateY(-2px);
        }

    /* Reuse your core variables */
    :root {
        --fd-yellow: #F5EB3B;
        --fd-black: #222222;
        --fd-grey: #757575;
    }
</style>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Recipe? Recipe { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (Recipe is null)
        {
            using var context = await DbFactory.CreateDbContextAsync();
            Recipe = await context.Recipe.FirstOrDefaultAsync(m => m.Id == Id);

            if (Recipe is null)
            {
                NavigationManager.NavigateTo("notfound");
            }
        }
    }

    private async Task UpdateRecipe()
    {
        if (Recipe is null) return;

        using var context = await DbFactory.CreateDbContextAsync();

        // Update the timestamp
        Recipe.DateUpdated = DateTime.Now;
        Recipe.UpdatedBy = Recipe.CreatedBy; // Or your current user logic

        context.Attach(Recipe).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
            NavigationManager.NavigateTo($"/recipes/details?id={Recipe.Id}");
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!RecipeExists(Recipe.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }
    }

    private bool RecipeExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Recipe.Any(e => e.Id == id);
    }
}