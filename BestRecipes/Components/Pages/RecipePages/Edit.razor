@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Recipe? Recipe { get; set; }

    // Dropdown Data
    private List<Ingredient>? allIngredients;
    private readonly List<string> CommonUnits = new() { "Tsp", "Tbsp", "Cup", "ml", "L", "Gram", "Kg", "Pinch", "Whole", "Clove", "Can", "Packet" };

    // Modal State
    private bool showModal = false;
    private Ingredient newIng = new() { Category = "General" };

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        using var context = await DbFactory.CreateDbContextAsync();

        // Load Ingredients for the dropdown
        allIngredients = await context.Ingredient.OrderBy(i => i.Name).ToListAsync();

        if (Recipe is null)
        {
            // Load Recipe with its ingredients from the join table
            Recipe = await context.Recipe
                .Include(r => r.RecipeIngredients)
                .FirstOrDefaultAsync(m => m.Id == Id);

            if (Recipe is null)
            {
                NavigationManager.NavigateTo("notfound");
            }
            else if (!Recipe.RecipeIngredients.Any())
            {
                // Ensure at least one empty row if none exist
                AddIngredientRow();
            }
        }
    }

    // --- Ingredients Logic ---
    private void AddIngredientRow() => Recipe?.RecipeIngredients?.Add(new RecipeIngredient());
    private void RemoveIngredientRow(RecipeIngredient ri) => Recipe?.RecipeIngredients?.Remove(ri);
    private void ShowIngredientModal() { newIng = new Ingredient() { Category = "General" }; showModal = true; }
    private void CloseIngredientModal() => showModal = false;

    private async Task QuickSaveIngredient()
    {
        if (string.IsNullOrWhiteSpace(newIng.Name)) return;

        using var context = await DbFactory.CreateDbContextAsync();
        var existing = await context.Ingredient.FirstOrDefaultAsync(i => i.Name.ToLower() == newIng.Name.ToLower());

        if (existing == null)
        {
            context.Ingredient.Add(newIng);
            await context.SaveChangesAsync();
            // Reload list so the new item appears in dropdowns
            allIngredients = await context.Ingredient.OrderBy(i => i.Name).ToListAsync();
        }
        showModal = false;
    }
    // -------------------------

    private async Task UpdateRecipe()
    {
        if (Recipe is null) return;

        using var context = await DbFactory.CreateDbContextAsync();

        // 1. Fetch the recipe currently in DB to track changes
        var recipeInDb = await context.Recipe
            .Include(r => r.RecipeIngredients)
            .FirstOrDefaultAsync(r => r.Id == Recipe.Id);

        if (recipeInDb == null)
        {
            NavigationManager.NavigateTo("notfound");
            return;
        }

        // 2. Update basic fields
        context.Entry(recipeInDb).CurrentValues.SetValues(Recipe);
        recipeInDb.DateUpdated = DateTime.Now;
        recipeInDb.UpdatedBy = Recipe.CreatedBy;

        // 3. Handle Child Collection (RecipeIngredients)
        // A. Remove ingredients deleted in UI
        foreach (var existingItem in recipeInDb.RecipeIngredients.ToList())
        {
            if (!Recipe.RecipeIngredients.Any(ri => ri.Id == existingItem.Id && ri.Id != 0))
            {
                context.RecipeIngredient.Remove(existingItem);
            }
        }

        // B. Add or Update ingredients from UI
        foreach (var itemModel in Recipe.RecipeIngredients)
        {
            // Skip rows where no ingredient was selected
            if (itemModel.IngredientId == 0) continue;

            var existingItem = recipeInDb.RecipeIngredients
                .FirstOrDefault(ri => ri.Id == itemModel.Id && ri.Id != 0);

            if (existingItem != null)
            {
                // Update
                existingItem.IngredientId = itemModel.IngredientId;
                existingItem.Quantity = itemModel.Quantity;
                existingItem.Unit = itemModel.Unit;
            }
            else
            {
                // Insert New
                recipeInDb.RecipeIngredients.Add(new RecipeIngredient
                {
                    IngredientId = itemModel.IngredientId,
                    Quantity = itemModel.Quantity,
                    Unit = itemModel.Unit
                });
            }
        }

        try
        {
            await context.SaveChangesAsync();
            NavigationManager.NavigateTo($"/recipes/details?id={Recipe.Id}");
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!RecipeExists(Recipe.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }
    }

    private bool RecipeExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Recipe.Any(e => e.Id == id);
    }
}