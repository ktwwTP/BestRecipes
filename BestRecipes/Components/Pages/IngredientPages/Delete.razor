@page "/ingredients/delete"
@using Microsoft.EntityFrameworkCore
@using BestRecipes.Domain
@inject IDbContextFactory<BestRecipes.Data.BestRecipesContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Ingredient</h2>
    <hr />
    @if (ingredient is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@ingredient.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpVote</dt>
            <dd class="col-sm-10">@ingredient.UpVote</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DownVote</dt>
            <dd class="col-sm-10">@ingredient.DownVote</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@ingredient.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@ingredient.DateUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@ingredient.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@ingredient.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="ingredient" OnValidSubmit="DeleteIngredient" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(ingredient is null)">Delete</button> |
            <a href="/ingredients">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Ingredient? ingredient;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        ingredient = await context.Ingredient.FirstOrDefaultAsync(m => m.Id == Id);

        if (ingredient is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteIngredient()
    {
        using var context = DbFactory.CreateDbContext();
        context.Ingredient.Remove(ingredient!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/ingredients");
    }
}
