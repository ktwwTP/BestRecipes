@page "/ingredients/edit"
@using Microsoft.EntityFrameworkCore
@using BestRecipes.Domain
@inject IDbContextFactory<BestRecipes.Data.BestRecipesContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Ingredient</h2>
<hr />
@if (Ingredient is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Ingredient" OnValidSubmit="UpdateIngredient" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Ingredient.Id" value="@Ingredient.Id" />
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <InputText id="name" @bind-Value="Ingredient.Name" class="form-control" />
                    <ValidationMessage For="() => Ingredient.Name" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="upvote" class="form-label">UpVote:</label>
                    <InputNumber id="upvote" @bind-Value="Ingredient.UpVote" class="form-control" />
                    <ValidationMessage For="() => Ingredient.UpVote" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="downvote" class="form-label">DownVote:</label>
                    <InputNumber id="downvote" @bind-Value="Ingredient.DownVote" class="form-control" />
                    <ValidationMessage For="() => Ingredient.DownVote" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="datecreated" class="form-label">DateCreated:</label>
                    <InputDate id="datecreated" @bind-Value="Ingredient.DateCreated" class="form-control" />
                    <ValidationMessage For="() => Ingredient.DateCreated" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="dateupdated" class="form-label">DateUpdated:</label>
                    <InputDate id="dateupdated" @bind-Value="Ingredient.DateUpdated" class="form-control" />
                    <ValidationMessage For="() => Ingredient.DateUpdated" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="createdby" class="form-label">CreatedBy:</label>
                    <InputText id="createdby" @bind-Value="Ingredient.CreatedBy" class="form-control" />
                    <ValidationMessage For="() => Ingredient.CreatedBy" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="updatedby" class="form-label">UpdatedBy:</label>
                    <InputText id="updatedby" @bind-Value="Ingredient.UpdatedBy" class="form-control" />
                    <ValidationMessage For="() => Ingredient.UpdatedBy" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/ingredients">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Ingredient? Ingredient { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Ingredient ??= await context.Ingredient.FirstOrDefaultAsync(m => m.Id == Id);

        if (Ingredient is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateIngredient()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Ingredient!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!IngredientExists(Ingredient!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/ingredients");
    }

    private bool IngredientExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Ingredient.Any(e => e.Id == id);
    }
}
